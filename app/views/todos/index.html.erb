<h1 class="text-center">To-Do List</h1>

<form id="new-task-form">
  <div class="row">
    <div class="medium-6 small-centered columns">
      <div class="row collapse">
        <div class="small-10 columns">
          <input id="new-task-text" type="text" placeholder="Enter to do task">
        </div>
        <div class="small-2 columns">
          <button type="submit" class="add-button button postfix radius">Add</button>
        </div>
      </div>
    </div>
  </div>
</form>


<div class="row">
  <div class="task-panel medium-5 small-12 columns" data-list="active">
    <div class="task-header">
      <h3>Active Tasks</h3>
    </div>
    <table class="task-table"></table>
  </div>

  <div class="medium-2 small-12 columns">
  </div>

  <div class="task-panel medium-5 small-12 columns" data-list="active">
    <div class="task-header">
      <h3>Completed Tasks</h3>
    </div>
    <table class="task-table"></table>
  </div>
</div>
